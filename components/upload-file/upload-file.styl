.upload-file
	display none
	width 100%
	height 100%
	background-color #00000080

	&_type
		&_active
			display flex

	&__wrapper
		width 300px
		margin auto
		background-color var(--secondary-background)
		border-radius 4px

	&__section
		display flex
		justify-content center
		align-items center
		flex-direction column
		margin 10px
		padding 20px
		color var(--gray_600)
		cursor pointer
		border 2px dashed var(--primary-background)
		defaultTransition()

		&_type_hovered,
		&:hover
			color var(--accent-text)
			border-color var(--accent-background)

			& ^[0]__icon
				fill var(--accent-background)

	&__icon
		width 90px
		height 90px
		margin-bottom 10px
		fill var(--primary-background)
		defaultTransition()
